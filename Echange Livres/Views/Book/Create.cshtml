                <form action="https://formbold.com/s/FORM_ID" method="POST">
                    <div class="formbold-form-title">

                        <h2 class="" style="color:darkslateblue">Manage Books</h2>
                        <p>

                        </p>
                    </div>

                    <div class="formbold-input-flex">
                        <div>
                            <label for="title" class="formbold-form-label">
                                Title
                            </label>
                            @Html.ValidationMessageFor(b => b.Title)
                            <input type="text"
                                   name="Title"
                                   id="title"
                                   class="formbold-form-input" />
                        </div>
                        <div>
                            <label for="isbn" class="formbold-form-label"> ISBN </label>
                            @Html.ValidationMessageFor(b => b.ISBN)
                            <input type="text"
                                   name="ISBN"
                                   id="isbn"
                                   class="formbold-form-input" />
                        </div>
                    </div>

                    <div class="formbold-input-flex">
                        <div>
                            <label for="price" class="formbold-form-label"> Price </label>
                            @Html.ValidationMessageFor(b => b.Price)
                            <input type="text"
                                   name="Price"
                                   id="price"
                                   class="formbold-form-input" />
                        </div>
                        <div>
                            @Html.ValidationMessageFor(b => b.Collection)
                            <label for="collection" class="formbold-form-label"> Collection </label>
                            <input type="text"
                                   name="Collection"
                                   id="collection"
                                   class="formbold-form-input" />
                        </div>
                    </div>

                    <div class="formbold-mb-3">
                        <label for="editor" class="formbold-form-label">
                            Editor
                        </label>
                        <input type="text"
                               name="Editor"
                               id="editor"
                               class="formbold-form-input" />
                    </div>

                    <div class="formbold-mb-3">
                        <label for="subtitle" class="formbold-form-label">
                            SubTitle
                        </label>
                        <input type="text"
                               name="Subtitle"
                               id="subtitle"
                               class="formbold-form-input" />
                    </div>
                    <div class="formbold-mb-3">
                        <label for="author" class="formbold-form-label">
                            Author
                        </label>
                        <input type="text"
                               name="author"
                               id="author"
                               class="formbold-form-input" />
                    </div>

                    <div>
                        <label for="message" class="formbold-form-label">
                            Description
                        </label>
                        <textarea rows="6"
                                  name="description"
                                  id="message"
                                  placeholder="Type here..."
                                  class="formbold-form-input"></textarea>
                    </div>
                    <div>
                        <div class="formbold-mb-3">
                            <label for="Edition Date" class="formbold-form-label"> Edition Date </label>
                            <input type="date"
                                   name="Edition Date"
                                   id="editiondate"
                                   class="formbold-form-input" />
                        </div>
                    </div>

                    <style>
                        #option-1 {
                            color: forestgreen;
                        }

                        #option-2 {
                            color: yellow;
                        }

                        #option-3 {
                            color: orange;
                        }

                        #option-4 {
                            color: orangered;
                        }
                    </style>

                    <label class="formbold-form-label">Book State</label>

                    <select class="formbold-form-input" name="occupation" id="occupation">
                        <option id="option-1" value="verygood">Very Good</option>
                        <option id="option-2" value="good">Good</option>
                        <option id="option-3" value="mediocre">Mediocre</option>
                        <option id="option-4" value="worn">Worn</option>
                    </select>

                    <label class="formbold-form-label">Category</label>

                    <select class="formbold-form-input" name="occupation" id="occupation">
                        <option value="verygood">Adventure stories</option>
                        <option value="good">Crime</option>
                        <option value="mediocre">Fantasy</option>
                        <option value="worn">Historical fiction</option>
                        <option value="worn">Classics</option>
                        <option value="worn">Humour and satire</option>
                        <option value="worn">Romance</option>
                        <option value="worn">Poetry</option>
                        <option value="worn">Horror</option>
                    </select>

                    <div class="formbold-mb-3">
                        <label for="upload" class="formbold-form-label">
                            Photo
                        </label>
                        <input type="file"
                               name="upload"
                               id="upload"
                               class="formbold-form-input formbold-form-file" />
                    </div>

                    <button class="formbold-btn">Add Book</button>
                    <button class="formbold-btn">Delete Book</button>
                    <button class="formbold-btn">Edit Book</button>
                </form>



                <style>

                    body {
                        font-family: 'Inter', sans-serif;
                    }

                    .formbold-mb-3 {
                        margin-bottom: 15px;
                    }

                    .formbold-relative {
                        position: relative;
                    }

                    .formbold-opacity-0 {
                        opacity: 0;
                    }

                    .formbold-stroke-current {
                        stroke: currentColor;
                    }

                    #supportCheckbox:checked ~ div span {
                        opacity: 1;
                    }

                    .formbold-main-wrapper {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        padding: 48px;
                    }

                    .formbold-form-wrapper {
                        margin: 0 auto;
                        max-width: 570px;
                        width: 100%;
                        background: white;
                        padding: 40px;
                    }

                    .formbold-img {
                        margin-bottom: 45px;
                    }

                    .formbold-form-title {
                        margin-bottom: 30px;
                    }

                        .formbold-form-title h2 {
                            font-weight: 600;
                            font-size: 28px;
                            line-height: 34px;
                            color: #07074d;
                        }

                        .formbold-form-title p {
                            font-size: 16px;
                            line-height: 24px;
                            color: #536387;
                            margin-top: 12px;
                        }

                    .formbold-input-flex {
                        display: flex;
                        gap: 20px;
                        margin-bottom: 15px;
                    }

                        .formbold-input-flex > div {
                            width: 50%;
                        }

                    .formbold-form-input {
                        text-align: center;
                        width: 100%;
                        padding: 13px 22px;
                        border-radius: 5px;
                        border: 1px solid #dde3ec;
                        background: #ffffff;
                        font-weight: 500;
                        font-size: 16px;
                        color: #536387;
                        outline: none;
                        resize: none;
                    }

                        .formbold-form-input:focus {
                            border-color: #6a64f1;
                            box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
                        }

                    .formbold-form-label {
                        color: #536387;
                        font-size: 14px;
                        line-height: 24px;
                        display: block;
                        margin-bottom: 10px;
                    }

                    .formbold-checkbox-label {
                        display: flex;
                        cursor: pointer;
                        user-select: none;
                        font-size: 16px;
                        line-height: 24px;
                        color: #536387;
                    }

                        .formbold-checkbox-label a {
                            margin-left: 5px;
                            color: #6a64f1;
                        }

                    .formbold-input-checkbox {
                        position: absolute;
                        width: 1px;
                        height: 1px;
                        padding: 0;
                        margin: -1px;
                        overflow: hidden;
                        clip: rect(0, 0, 0, 0);
                        white-space: nowrap;
                        border-width: 0;
                    }

                    .formbold-form-input:focus {
                        border-color: #6a64f1;
                        box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
                    }

                    .formbold-checkbox-inner {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        width: 20px;
                        height: 20px;
                        margin-right: 16px;
                        margin-top: 2px;
                        border: 0.7px solid #dde3ec;
                        border-radius: 3px;
                    }

                    .formbold-btn {
                        font-size: 16px;
                        border-radius: 5px;
                        padding: 14px 25px;
                        border: none;
                        font-weight: 500;
                        background-color: #6a64f1;
                        color: white;
                        cursor: pointer;
                        margin-top: 25px;
                    }

                        .formbold-btn:hover {
                            box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
                        }
                </style>

    </body>
</html>